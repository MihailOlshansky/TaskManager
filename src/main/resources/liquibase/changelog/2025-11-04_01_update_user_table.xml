<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="update_user_table" author="omd">
        <addColumn tableName="user" schemaName="taskmanager">
            <column name="password" type="varchar(255)" defaultValue="">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <comment>Update user table, add password field</comment>
    </changeSet>

    <changeSet id="update_user_table_username_unique_constraint" author="omd">
        <addUniqueConstraint tableName="user"
                             columnNames="username"
                             constraintName="user_username_unique"/>
    </changeSet>
</databaseChangeLog>
